{
  "name": "cypress-and-jest",
  "version": "1.0.0",
  "description": "Cypress and Jest both with code coverage running unit tests",
  "main": "index.js",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "vite --host",
    "start:silent": "VITE_APP_MOCK=1 vite --host --no-open",
    "start:dev": "VITE_APP_ENV=dev pnpm start",
    "build": "tsc && vite build",
    "build:dev": "VITE_APP_ENV=dev pnpm build",
    "build:staging": "VITE_APP_ENV=staging pnpm build",
    "preview": "vite preview",
    "test:cypress": "cypress open",
    "test:cypress:run": "cypress run --browser chrome",
    "test:cypress:cov": "start-server-and-test start:silent http-get://localhost:3000 test:cypress:run",
    "test:unit": "jest --watch",
    "test:unit:cov": "jest --coverage --watchAll=false",
    "check:ts": "tsc",
    "check:deps": "node scripts/misc/gen-audit-report.js",
    "cover:unit": "nyc --silent npm run test:unit:cov",
    "cover:integration": "nyc --silent --no-clean npm run test:cypress:cov",
    "cover:report": "npx nyc report --reporter lcov --reporter text --report-dir coverage",
    "cover:merge-cov-file": "nyc merge cov-report && mv coverage.json .nyc_output/out.json && npm run cover:report",
    "cover:gather-report": "(mkdir cov-report | true) && cp cypress-coverage/coverage-final.json cov-report/integrate-coverage-final.json && cp unit-out/coverage/coverage-final.json cov-report/unit-coverage-final.json",
    "test-and-combine": "npm run test:unit:cov && npm run test:cypress:cov && npm run cover:gather-report && npm run cover:merge-cov-file",
    "jest-clear-cache": "jest --clearCache"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cypress/code-coverage": "^3.11.0",
    "babel-plugin-istanbul": "6.1.1",
    "check-code-coverage": "1.10.5",
    "cypress": "^12.16.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "nyc": {
    "report-dir": "cypress-coverage"
  },
  "dependencies": {
    "@swc/jest": "^0.2.29",
    "@testing-library/cypress": "^10.0.1",
    "@types/jest": "^29.5.5",
    "@types/react": "^18.2.23",
    "@types/react-dom": "^18.2.8",
    "@vitejs/plugin-react": "^4.0.4",
    "babel-plugin-styled-components": "^2.1.4",
    "jest-environment-jsdom": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-node": "^10.9.1",
    "vite": "^4.4.9",
    "vite-plugin-istanbul": "^5.0.0",
    "vite-tsconfig-paths": "^4.2.1"
  }
}
